                                    <div class="book-detail">
                                        <h2 class="book-title"><a href="#">Tango, un abrazo sanador</a></h2>
                                        <small class="book-category"><a href="#">2013</a></small>
                                        <div class="button button-white button-light capitalize button-circle"><i class="icon-line-zoom-in"></i><span>{{ trans('messages.quick_view') }}</span></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>


            <section id="section-cursos" class="page-section topmargin-lg">

                                    <div class="book-detail">
                                        <h2 class="book-title"><a href="#">Tango, una danza interior</a></h2>
                                        <small class="book-category"><a href="#">01 Enero, 2007</a></small>
                                        <div class="button button-white button-light capitalize button-circle"><i class="icon-line-zoom-in"></i><span>{{ trans('messages.quick_view') }}</span></div>
                                    </div>
                                </div>

<div class="search-form bg-white">
    <form method="post" action="/search">
        {{ csrf_field() }}
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="row">
                        <div class="col-md-12">
                            <input class="form-control" name="s" value="{{ search }}" placeholder="Buscador de Descuentos..." type="text">
                        </div>
                    </div>
                </div>
                <!-- /. col 3 -->
                <div class="col-sm-3">
                    <select class="form-control sm-margin-bottom-10" name="category">
                        <option value="0">
                            Seleccionar Categoria
                        </option>
                        <option value="today" selected="selected">
                            Hoy
                        </option>
                        {% for category in categories %}
                            <option value="{{ category.category_slug }}" {% if category.category_slug == category_slug %}selected="selected"{% endif %}>{{ category.category_name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <!-- /.col 3 -->
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-raised ripple-effect btn-primary btn-block">
                        <i class="fa fa-search" aria-hidden="true"></i> Buscar
                    </button>
                </div>
                <!-- /.col 1 -->
            </div>
        </div>
    </form>

    <div class="alert-wrapper container" style="margin-top: 20px">
        {% if Session.has('success') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ Session.get('success') }}
            </div>
        {% endif %}
        {% if Session.has('error') %}
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ Session.get('error') }}
            </div>
        {% endif %}
        {% if Session.has('warning') %}
            <div class="alert alert-warning">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ Session.get('warning') }}
            </div>
        {% endif %}
    </div>
</div>
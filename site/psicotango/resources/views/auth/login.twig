{% block page_title %}Home{% endblock %}
{% extends 'layout/login_base.twig' %}
{% block title %}Psicotango | Login {% endblock %}

{% block content %}
    <form method="POST" action="{{ l10n_url_by_route('login') }}/login" class="nobottommargin dark-box">
        {{ csrf_field() }}
        <h1 class="text-center" style="text-transform: uppercase">{{ trans('messages.login') }}</h1>

        <div class="center">
            <h4 style="margin-bottom: 15px;"></h4>
            <a href="/redirect/facebook" class="button button-rounded btn-block si-facebook si-colored"><i class="icon-facebook"></i> Facebook</a>
        </div>

        <div class="line line-sm"></div>

        <div class="form-group {{ errors.has('email') ? ' has-error' : '' }}">
            <label>{{ trans('messages.email') }}</label>
            <input type="text" name="email" class="form-control sm-form-control" value="{{ old('email') }}">
            {% if errors.has('email') is not empty %}
                <span class="help-block">{{ errors.first('email') }}</span>
            {% endif %}
        </div>

        <div class="form-group {{ errors.has('password') ? ' has-error' : '' }}">
            <label>{{ trans('messages.password') }}</label>
            <input type="password" name="password" class="form-control sm-form-control" value="">
            {% if errors.has('password') %}
                <span class="help-block">{{ errors.first('password') }}</span>
            {% endif %}
        </div>

        <div class="form-group">
            <label>
                <a href="{{ url('/password/reset') }}">
                    {{ trans('messages.forgot_password_text') }}
                </a>
            </label>
        </div>

        <div class="form-group">
            <label>
                {{ trans('messages.need_account') }} <small><a href="/signup">{{ trans('messages.signup') }}</a></small>
            </label>
        </div>

        <button type="submit" class="button button-rounded button-green btn-block">
            {{ trans('messages.login') }}
        </button>


    </form>
{% endblock %}